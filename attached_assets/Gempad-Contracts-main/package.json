{
  "name": "gempad_root",
  "version": "1.0.1",
  "private": true,
  "author": "netixsol",
  "license": "MIT",
  "preferYarn": true,
  "keywords": [
    "typescript",
    "smart-contracts",
    "solidity",
    "ethereum-dapp",
    "hardhat",
    "ethersjs",
    "turborepo"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "compile": "turbo run compile",
    "dev": "turbo run dev --no-cache --parallel",
    "hardhat:compile": "turbo run compile --scope=contracts",
    "hardhat:node": "turbo run start --scope=contracts",
    "hardhat:test": "turbo run sol:test --scope=contracts",
    "test": "turbo run test",
    "prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format": "prettier --ignore-path .gitignore \"apps/**/*.+(ts|js|tsx)\" --write",
    "prepare": "husky install",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "test:contract-sdk": "turbo run test --filter=contracts",
    "generate:contract-sdk": "turbo run generate --filter=contracts"
  },
  "devDependencies": {
    "@types/find": "0.2.1",
    "@changesets/cli": "^2.22.0",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.10",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^13.1.0",
    "msw": "^0.36.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.18.2",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.19",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "find": "0.3.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/solidity": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^2.3.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/jest": "^29.5.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "eth-token-recover": "^4.9.3",
    "ethers": "5.7.2",
    "hardhat": "^2.17.2",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  }
}